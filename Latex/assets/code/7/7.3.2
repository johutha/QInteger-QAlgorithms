internal operation Add2nQFT(Summand : QInt, 
                                Target : QInt) : Unit is Adj+Ctl
{
	let n = Target::Size;
	within
	{
		QFTQInt(Target);
	}
	apply
	{
		for (i in 0..n-1)
		{
			for (j in 0..n - i - 1)
			{
				(Controlled RotQ)([Summand::Number[i]],
                                    (n - i - j, Target::Number[j]));
			}
		}
	}
}